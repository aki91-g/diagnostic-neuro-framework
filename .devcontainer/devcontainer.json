{
  "name": "Diagnostic Neuro Framework",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "PYTHONPATH": "/workspaces/diagnostic-neuro-framework",
    "REQUESTS_CA_BUNDLE": "/etc/ssl/certs/ca-certificates.crt"
  },
  "postCreateCommand": "chmod +x scripts/fetch_aal_atlas.sh && ./scripts/fetch_aal_atlas.sh && echo \"alias py='/usr/local/bin/python'\" >> ~/.bashrc",
  "customizations": {
    "vscode": {
        "extensions": [
            "ms-python.python",
            "ms-python.vscode-pylance",
            "ms-toolsai.jupyter",
            "ms-python.black-formatter",
            "ms-python.isort",
            "mechatroner.rainbow-csv",
            "njpwerner.autodocstring",
            "stve.snakecharmer",
            "esbenp.prettier-vscode",
            "irongeek.vscode-env",
            "tamasfe.even-better-toml",
            "mhutchie.git-graph",
            "christian-kohler.path-intellisense",
            "github.vscode-github-actions",
            "github.vscode-pull-request-github"
        ],
        "settings": {
            "python.defaultInterpreterPath": "/usr/local/bin/python",
            "python.terminal.activateEnvInSelectedTerminal": true,
            "python.analysis.typeCheckingMode": "basic",
            "editor.formatOnSave": true,
            "editor.defaultFormatter": "ms-python.black-formatter",
            "editor.codeActionsOnSave": {
                "source.organizeImports": "always"
            },
        "python.analysis.autoImportCompletions": true
        }
    }
  }
}